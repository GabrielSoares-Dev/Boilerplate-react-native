{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "paths": {
      "@tests/*": [
        "./tests/*"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@routes": [
        "./src/routes"
      ],
      "@components": [
        "./src/components"
      ],
      "@functions": [
        "./src/functions"
      ],
      "@providers": [
        "./src/providers"
      ],
      "@services": [
        "./src/services"
      ],
      "@store": [
        "./src/store"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@guards": [
        "./src/guards"
      ],
      "@constants": [
        "./src/constants"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@types": [
        "./src/@types"
      ]
    },
    "types": [
      "jest",
      "@types/styled-components-react-native"
    ],
  },
  "include": [
    "src",
    "tests",
  ],
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}